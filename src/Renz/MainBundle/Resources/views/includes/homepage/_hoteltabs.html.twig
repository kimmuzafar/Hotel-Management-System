<section class="about mt100">
  <div class="col-md-6">
	<h2 class="lined-heading fadeIn appear" data-start="800"><span>{{ 'site.label.hotelTabs' | trans }}</span></h2>
	<!-- Nav tabs -->
	<ul class="nav nav-tabs">
	  <li class="active"><a href="#hotel" data-toggle="tab">{% if app.request.locale=='ar' %}{{ hotelTabs.titlear }}{% else %}{{ hotelTabs.title }}{% endif %}</a></li>
	</ul>
	<!-- Tab panes -->
	<div class="tab-content">
	  <div class="tab-pane fade in active" id="hotel">
		<p>{% if app.request.locale=='ar' %}{{ hotelTabs.longDetailar | raw }}{% else %}{{ hotelTabs.longDetail | raw }}{% endif %}</p>
	  </div>
	</div>
  </div>
</section>
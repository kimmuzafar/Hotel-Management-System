<section class="revolution-slider">
	<div class="bannercontainer">
		<div class="banner">
			<ul>
				{% for photo in sliderphotos %}
				<!-- Slide -->
				<li data-transition="fade" data-slotamount="7" data-masterspeed="1500">
				
					<!-- Main Image -->
					<img src="{{ asset('uploads/slider/'~photo.path) }}" style="opacity:0;" alt="slidebg1" data-bgfit="cover" data-bgposition="left bottom" data-bgrepeat="no-repeat">
					
					<!-- Layers -->
					<!-- Layer 1 -->
					<div class="caption sft revolution-starhotel bigtext" data-x="505" data-y="30" data-speed="700" data-start="1700" data-easing="easeOutBack">
						&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{% if app.request.locale=='ar' %}{{ photo.titlear }}{% else %}{{ photo.title }}{% endif %}
					</div>
					<!-- Layer 2 -->
					<div class="caption sft revolution-starhotel smalltext" data-x="605" data-y="105" data-speed="800" data-start="1700" data-easing="easeOutBack">
						<span>{% if app.request.locale=='ar' %}{{ photo.shortDetailar|raw }}{% else %}{{ photo.shortDetail|raw }}{% endif %}</span>
					</div>
					<!-- Layer 3 -->
					<div class="caption sft" data-x="775" data-y="175" data-speed="1000" data-start="1900" data-easing="easeOutBack">
						<a href="{{ path('renz_main_room_index') }}" class="button btn btn-purple btn-lg">{{ 'site.button.seeRooms' | trans }}</a>
					</div>
				</li>
				{% endfor %}
			</ul>
		</div>
	</div>
</section>
{% extends '::base.html.twig' %}

{% block content %}

<!-- Parallax Effect -->
<script type="text/javascript">$(document).ready(function(){$('#parallax-pagetitle').parallax("50%", -0.55);});</script>

<section class="parallax-effect">
  <div id="parallax-pagetitle" style="background-image: url({{ asset('bundles/main/images/parallax/parallax-01.jpg') }});">
    <div class="color-overlay"> 
      <!-- Page title -->
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <ol class="breadcrumb">
              <li><a href="{{ path('renz_main_index_index') }}">Home</a></li>
              <li class="active">Newsletter</li>
            </ol>
            <h1>Newsletter</h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<div class="container">
  <div class="row"> 
    
    <!-- Blog -->
    <section class="blog mt50">
      <div class="col-md-9"> 
        <!-- Article -->
        <article>
          <div class="row">
            
            <div class="col-md-12">
              
              {% for flashMessage in app.session.flashbag.get('error') %}
				{% if flashMessage %}
					<div id="message">
						<h1>Request Sent Successfully!</h1>
			    		<div class="alert alert-success alert-dismissable">
			    			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			    			{{ flashMessage | raw }}
			    		</div>
					</div>
				{% endif %}
			  {% endfor %}
              
            </div>
            
          </div>
        </article>
        
      </div>
    </section>
    
    
    <!-- Aside -->
    <aside class="mt50">
      <div class="col-md-3"> 
		
        <!-- Widget: Latest news -->
        <div class="widget clearfix">
          <h3>Facilities at Renz Hotel</h3>
          <div class="tags"> 
            <a href="#">Food & Drink</a> 
            <a href="#">Internet</a> 
            <a href="#">Parking</a> 
            <a href="#">Services</a> 
            <a href="#">General</a> 
            <a href="#">English Language</a>
            <a href="#">Arabic Language</a>
          </div>
        </div>
        
      </div>
    </aside>
  </div>
</div>

{% endblock %}
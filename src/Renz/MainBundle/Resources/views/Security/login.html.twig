{% extends '::base.html.twig' %}

{% block content %}

<!-- Parallax Effect -->
<script type="text/javascript">$(document).ready(function(){$('#parallax-pagetitle').parallax("50%", -0.55);});</script>

<section class="parallax-effect">
  <div id="parallax-pagetitle" style="background-image: url({{ asset('bundles/main/images/parallax/parallax-01.jpg') }});">
    <div class="color-overlay"> 
      <!-- Page title -->
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <ol class="breadcrumb">
              <li><a href="{{ path('renz_main_index_index') }}">Home</a></li>
              <li class="active">Login</li>
            </ol>
            <h1>Login</h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<div class="container">
  <div class="row"> 
    
    <!-- Blog -->
    <section class="blog mt50">
      <div class="col-md-12"> 
        <!-- Article -->
        <article>
          <div class="row">
            
            <div class="col-md-12">
              <div class="col-md-6 col-md-offset-3">
            	{% if error %}
					<div class="alert alert-danger alert-dismissable">
			          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
						{{ error.message }} 
					</div>
				{% else %}
					<div class="alert alert-info alert-dismissable">
			          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
			          Type your Email and password to log in
			        </div>
				{% endif %}
				
				<br />
				
				<form class="reservation-vertical clearfix" role="form" method="post" action="{{ path('renz_main_security_logincheck') }}" id="bookingform">
	          	  <div class="form-group">
		            <label for="email" accesskey="E">E-mail:</label>
		            <input name="_username" type="email" id="username" value="{{ last_username }}" required="required" class="form-control" />
		          </div>
		          <div class="form-group">
		          	<label for="email" accesskey="E">Password:</label>
		            <input name="_password" type="password" id="password" class="form-control" required="required" />
		          </div>
		          <div class="form-group">
		            <input type="checkbox" id="remember" class="" value="1" name="remember"/>
					<label class="choice" for="remember">Remember me ?</label>
		          </div>
		          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		          <button type="submit" class="btn btn-primary">Login</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; | &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Don't have an account? <a href="{{ path('renz_main_security_register') }}">Click Here</a> to create one.
		          <br />
		          <br />
		          Forgot Your Password? <a href="{{ path('renz_main_security_forgotpasswordresetrequest') }}">Click Here</a> to reset your password..
		        </form>
				
              </div>
            </div>
            
          </div>
        </article>
        
      </div>
    </section>
    
  </div>
</div>

{% endblock %}
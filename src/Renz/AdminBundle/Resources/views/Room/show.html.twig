{% extends "::admin.html.twig" %}

{% block pagetitle %}Room List{% endblock %}
	
{% block content %}
	<script type="text/javascript">
	$('document').ready(function(){
		$('#form_submit').click(function(){
			return confirm('Do you want to delete this?');
		});
	});
	</script>

	<br />
	
	<h3>Room Details</h3>
	<span class="subtitle">To edit this room press Edit, to delete press Delete</span>
	<hr/>
	
	<table class="display stylized">
        <tbody>
            <tr>
                <th width="130">Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Room Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>
                	<a href="{{ asset('uploads/rooms_main/'~entity.path) }}" target="_blank">
                		<img src="{{ asset('uploads/rooms_main/'~entity.path) }}" title="{{ entity.title }}" width="200px" />
                	</a>
                	<p></p>
                	{% for photo in entity.photos %}
						<a href="{{ asset('uploads/rooms/'~photo.path) }}" target="_blank">
	                		<img src="{{ asset('uploads/rooms/'~photo.path) }}" title="{{ photo.title }}" width="100px" />
	                	</a>
					{% endfor %}
                </td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ entity.price }}</td>
            </tr>
            <tr>
                <th>Non-Refundable Price</th>
                <td>{{ entity.nonRefundablePrice }}</td>
            </tr>
            <tr>
                <th>Room Capacity</th>
                <td>{{ entity.capacity }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ entity.shortDetail }}</td>
            </tr>
            <tr>
                <th>Long Details</th>
                <td>{{ entity.longDetail | raw }}</td>
            </tr>
            <tr>
                <th>Facilities</th>
                <td>{{ entity.facility }}</td>
            </tr>
            <tr>
                <th>Room Order</th>
                <td>{{ entity.roomOrder }}</td>
            </tr>
            <tr>
                <th>Guest Favourite</th>
                <td>{% if entity.guestFavourite==1 %}<font color="green">Yes</font>{% else %}<font color="red">No</font>{% endif %}</td>
            </tr>
            <tr>
                <th>Date Created</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Date Updated</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Room Visibility</th>
                <td>{% if entity.status==1 %}<font color="green">Published</font>{% else %}<font color="red">Disabled</font>{% endif %}</td>
            </tr>
        </tbody>
    </table>
    
{% endblock %}

{% block sidenav %}
	<p class="leading">
		<p><a href="{{ path('renz_admin_room_edit', { 'id': entity.id }) }}" class="btn btn-special btn-green"><img SRC="{{ asset('bundles/admin/img/page_save.png') }}" class="icon" alt=""/>Edit This Room</a></p>
		<p>{{ form(delete_form) }}</p>
		<p><a href="{{ path('renz_admin_room_index') }}" class="btn btn-special"><img SRC="{{ asset('bundles/admin/img/page_white_go.png') }}" class="icon" alt=""/>Cancel and go back</a></p>
	</p>
	<div class="box">
		You are now using <b class="big">72%</b> of your allowed storage capacity.
		<div id="capacity" class="progress progress-green"><span><b></b></span></div>
	</div>
	<div class="content-box">
		<header>
			<h3>Tags</h3>
		</header>
		<section>
			<div class="tagcloud">
				<a href="#" class="tag1">lorem</a> <a href="#" class="tag5">ipsum</a> <a href="#" class="tag1">dolor</a> <a href="#" class="tag3">sit</a> <a href="#" class="tag1">amet</a>
			</div>
		</section>
	</div>
{% endblock %}
{% extends "::admin.html.twig" %}

{% block pagetitle %}User List{% endblock %}
	
{% block content %}
	<script type="text/javascript">
	$('document').ready(function(){
		$('#form_submit').click(function(){
			return confirm('Do you want to delete this?');
		});
	});
	</script>

	<br />				
	
	{% if entity.id==1 %}<div class="box box-info">This user is marked as <b>Super User</b> and should not be deleted..</div>{% endif %}
	
	<h3>User Details</h3>
	<span class="subtitle">To edit this user press Edit, to delete press Delete</span>
	<hr/>
	
	<table class="display stylized">
        <tbody>
            <tr>
                <th width="100">User ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>*****</td>
            </tr>
            <tr>
            	<th>Role</th>
            	<td>
            		{% for role in entity.roles %}
						{{ role.name|upper }} <b>|</b> 
					{% endfor %}
            	</td>
            </tr>
            <tr>
                <th>User Status</th>
                <td>{% if entity.isActive==1 %}<font color="green">Active</font>{% else %}<font color="red">Disabled</font>{% endif %}</td>
            </tr>
        </tbody>
    </table>
    
{% endblock %}

{% block sidenav %}
	<p class="leading">
		<p><a href="{{ path('renz_admin_user_edit', { 'id': entity.id }) }}" class="btn btn-special btn-green"><img SRC="{{ asset('bundles/admin/img/page_save.png') }}" class="icon" alt=""/>Edit This User</a></p>
		{% if entity.id==1 %}{% else %}<p>{{ form(delete_form) }}</p>{% endif %}
		<p><a href="{{ path('renz_admin_user_index') }}" class="btn btn-special"><img SRC="{{ asset('bundles/admin/img/page_white_go.png') }}" class="icon" alt=""/>Cancel and go back</a></p>
	</p>
	<div class="box">
		You are now using <b class="big">72%</b> of your allowed storage capacity.
		<div id="capacity" class="progress progress-green"><span><b></b></span></div>
	</div>
	<div class="content-box">
		<header>
			<h3>Tags</h3>
		</header>
		<section>
			<div class="tagcloud">
				<a href="#" class="tag1">lorem</a> <a href="#" class="tag5">ipsum</a> <a href="#" class="tag1">dolor</a> <a href="#" class="tag3">sit</a> <a href="#" class="tag1">amet</a>
			</div>
		</section>
	</div>
{% endblock %}
{% extends "::admin.html.twig" %}

{% block pagetitle %}CMS List{% endblock %}
	
{% block content %}
	<script type="text/javascript">
	$('document').ready(function(){
		$('#form_submit').click(function(){
			return confirm('Do you want to delete this?');
		});
	});
	</script>

	<br />				
	
	<h3>Page Details</h3>
	<span class="subtitle">To edit this Page press Edit, to delete press Delete</span>
	<hr/>
	
	<table class="display stylized">
        <tbody>
            <tr>
                <th width="100">Page ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Long Detail</th>
                <td>{{ entity.longDetail | raw }}</td>
            </tr>
            <tr>
                <th>Date Updated</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>
    
{% endblock %}

{% block sidenav %}
	<p class="leading">
		<p><a href="{{ path('renz_admin_cms_edit', { 'id': entity.id }) }}" class="btn btn-special btn-green"><img SRC="{{ asset('bundles/admin/img/page_save.png') }}" class="icon" alt=""/>Edit This News</a></p>
		<p>{{ form(delete_form) }}</p>
		<p><a href="{{ path('renz_admin_cms_index') }}" class="btn btn-special"><img SRC="{{ asset('bundles/admin/img/page_white_go.png') }}" class="icon" alt=""/>Cancel and go back</a></p>
	</p>
	<div class="box">
		You are now using <b class="big">72%</b> of your allowed storage capacity.
		<div id="capacity" class="progress progress-green"><span><b></b></span></div>
	</div>
	<div class="content-box">
		<header>
			<h3>Tags</h3>
		</header>
		<section>
			<div class="tagcloud">
				<a href="#" class="tag1">lorem</a> <a href="#" class="tag5">ipsum</a> <a href="#" class="tag1">dolor</a> <a href="#" class="tag3">sit</a> <a href="#" class="tag1">amet</a>
			</div>
		</section>
	</div>
{% endblock %}
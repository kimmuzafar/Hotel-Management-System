{% extends "::admin.html.twig" %}

{% block pagetitle %}Price Plan List{% endblock %}
	
{% block content %}
	<script type="text/javascript">
	$('document').ready(function(){
		$('#form_submit').click(function(){
			return confirm('Do you want to delete this?');
		});
	});
	</script>

	<br />				
	
	<h3>Price Plan Details</h3>
	<span class="subtitle">To edit this Price Plan press Edit, to delete press Delete</span>
	<hr/>
	
	<table class="display stylized">
        <tbody>
			<tr>
			    <th width="100">Room Name</th>
			    <td>{{ entity.room }}</td>
			</tr>
			<tr>
			    <th>Date Range</th>
			    <td>{{ entity.dateStart|date('Y-m-d') }} <b>- to -</b> {{ entity.dateEnd|date('Y-m-d') }}</td>
			</tr>
			<tr>
			    <th>Sunday</th>
			    <td>SAR <b>{{ entity.sunday }}</b></td>
			</tr>
			<tr>
			    <th>Monday</th>
			    <td>SAR <b>{{ entity.monday }}</b></td>
			</tr>
			<tr>
			    <th>Tuesday</th>
			    <td>SAR <b>{{ entity.tuesday }}</b></td>
			</tr>
			<tr>
			    <th>Wednesday</th>
			    <td>SAR <b>{{ entity.wednesday }}</b></td>
			</tr>
			<tr>
			    <th>Thursday</th>
			    <td>SAR <b>{{ entity.thursday }}</b></td>
			</tr>
			<tr>
			    <th>Friday</th>
			    <td>SAR <b>{{ entity.friday }}</b></td>
			</tr>
			<tr>
			    <th>Saturday</th>
			    <td>SAR <b>{{ entity.saturday }}</b></td>
			</tr>
			<tr>
			    <th>Date</th>
			    <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
			</tr>
        </tbody>
    </table>
    
{% endblock %}

{% block sidenav %}
	<p class="leading">
		<p><a href="{{ path('renz_admin_priceplan_edit', { 'id': entity.id }) }}" class="btn btn-special btn-green"><img SRC="{{ asset('bundles/admin/img/page_save.png') }}" class="icon" alt=""/>Edit This Price Plan</a></p>
		<p>{{ form(delete_form) }}</p>
		<p><a href="{{ path('renz_admin_priceplan_index') }}" class="btn btn-special"><img SRC="{{ asset('bundles/admin/img/page_white_go.png') }}" class="icon" alt=""/>Cancel and go back</a></p>
	</p>
	<div class="box">
		You are now using <b class="big">72%</b> of your allowed storage capacity.
		<div id="capacity" class="progress progress-green"><span><b></b></span></div>
	</div>
	<div class="content-box">
		<header>
			<h3>Tags</h3>
		</header>
		<section>
			<div class="tagcloud">
				<a href="#" class="tag1">lorem</a> <a href="#" class="tag5">ipsum</a> <a href="#" class="tag1">dolor</a> <a href="#" class="tag3">sit</a> <a href="#" class="tag1">amet</a>
			</div>
		</section>
	</div>
{% endblock %}
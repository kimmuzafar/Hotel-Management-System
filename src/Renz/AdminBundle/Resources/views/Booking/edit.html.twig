{% extends "::admin.html.twig" %}

{% block pagetitle %}Bookings{% endblock %}
	
{% block javascriptcode %}
<script type="text/javascript">
$(document).ready(function(){
	
	/* setup navigation, content boxes, etc... */
	Administry.setup();
});
</script>
{% endblock %}

{% block contentsinglecolumn %}

{{ form_start(edit_form) }}

<!-- Left column/section -->
<section class="column width6 first">

	<h3>Update Booking</h3>
	
	<fieldset>
		<legend>BOOKING INFORMATION</legend>
		
		<div class="clearfix leading">
			<div class="column width3 first">
				<p><b>BOOKING REFERENCE #:</b></p>
				<p>{{ entity.bookingreference }}</p>
			</div>
		</div>
		
		<div class="clearfix leading">
			<div class="column width3 first">
				<p>
					{{ form_label(edit_form.room) }}<br/>
					{{ form_widget(edit_form.room) }}
				</p>
			</div>
			
			<div class="column width3">
				<p>
					{{ form_label(edit_form.guests) }}<br/>
					{{ form_widget(edit_form.guests) }}
				</p>
			</div>
		</div>
		
		<div class="clearfix leading">
			<div class="column width3 first">
				<p>
					{{ form_label(edit_form.dateCheckin) }}<br/>
					{{ form_widget(edit_form.dateCheckin) }}
				</p>
			</div>
			
			<div class="column width3">
				<p>
					{{ form_label(edit_form.dateCheckout) }}<br/>
					{{ form_widget(edit_form.dateCheckout) }}
				</p>
			</div>
		</div>
		
		<p>
			{{ form_label(edit_form.totalDays) }}
			<br/>
			{{ form_widget(edit_form.totalDays) }}
		</p>
		
		<p>
			{{ form_label(edit_form.specialRequests) }}
			<br/>
			{{ form_widget(edit_form.specialRequests) }}
		</p>
	
	</fieldset>
	
	<fieldset>
		<legend>PERSONAL INFORMATION</legend>
		
		<div class="clearfix leading">
			<div class="column width3 first">
				<p>
					{{ form_label(edit_form.firstname) }}<br/>
					{{ form_widget(edit_form.firstname) }}
				</p>
			</div>
			
			<div class="column width3">
				<p>
					{{ form_label(edit_form.lastname) }}<br/>
					{{ form_widget(edit_form.lastname) }}
				</p>
			</div>
		</div>
		
		<div class="clearfix leading">
			<div class="column width3 first">
				<p>
					{{ form_label(edit_form.email) }}<br/>
					{{ form_widget(edit_form.email) }}
				</p>
			</div>
			
			<div class="column width3">
				<p>
					{{ form_label(edit_form.address) }}<br/>
					{{ form_widget(edit_form.address) }}
				</p>
			</div>
		</div>
		
		<div class="clearfix leading">
			<div class="column width3 first">
				<p>
					{{ form_label(edit_form.city) }}<br/>
					{{ form_widget(edit_form.city) }}
				</p>
			</div>
			
			<div class="column width3">
				<p>
					{{ form_label(edit_form.zipcode) }}<br/>
					{{ form_widget(edit_form.zipcode) }}
				</p>
			</div>
		</div>
		
		<div class="clearfix leading">
			<div class="column width3 first">
				<p>
					{{ form_label(edit_form.country) }}<br/>
					{{ form_widget(edit_form.country) }}
				</p>
			</div>
			
			<div class="column width3">
				<p>
					{{ form_label(edit_form.mobile) }}<br/>
					{{ form_widget(edit_form.mobile) }}
				</p>
			</div>
		</div>
		
	</fieldset>	
	
	<fieldset>
		<legend>PAYMENT INFORMATION</legend>
		
		<div class="clearfix leading">
			<div class="column width6 first">
				<p>
					{{ form_label(edit_form.cardownername) }}<br/>
					{{ form_widget(edit_form.cardownername) }}
				</p>
			</div>
		</div>
		
		<div class="clearfix leading">
			<div class="column width3 first">
				<p>
					{{ form_label(edit_form.cardtype) }}<br/>
					{{ form_widget(edit_form.cardtype) }}
				</p>
			</div>
			
			<div class="column width3">
				<p>
					{{ form_label(edit_form.cardnumber) }}<br/>
					{{ form_widget(edit_form.cardnumber) }}
				</p>
			</div>
		</div>
		
		<div class="clearfix leading">
			<div class="column width3 first">
				<p>
					{{ form_label(edit_form.expiryMonth) }}<br/>
					{{ form_widget(edit_form.expiryMonth) }}
				</p>
			</div>
			
			<div class="column width3">
				<p>
					{{ form_label(edit_form.expiryYear) }}<br/>
					{{ form_widget(edit_form.expiryYear) }}
				</p>
			</div>
		</div>
		
		<p class="box"><input type="submit" class="btn btn-green big" value="Save"/> or <a href="{{ path('renz_admin_booking_index') }}">Cancel</a></p>
	
	</fieldset>

</section>
<!-- End of Left column/section -->
	
	<!-- Right column/section -->
	<aside class="column width2">
		
		<p><a href="{{ path('renz_admin_booking_index') }}" class="btn btn-special"><img SRC="{{ asset('bundles/admin/img/page_white_go.png') }}" class="icon" alt=""/>Cancel and go back</a></p>
		
		<div class="content-box">
			<header>
				<h3>Booking Status</h3>
			</header>
			<section>
				Change Booking Status
				<p>{{ form_widget(edit_form.bookingstatus) }}</p>
			</section>
		</div>
		 
		<div id="rightmenu">
			<dl class="first">
				<dt><img width="16" height="16" alt="" SRC="img/help.png"></dt>
				<dd><a href="#">Help</a></dd>
				<dd class="last">If you are a new user, you should read "Getting started"</dd>							
			</dl>
		</div>
		
	</aside>
	<!-- End of Right column/section -->

{{ form_end(edit_form) }}

{% endblock %}
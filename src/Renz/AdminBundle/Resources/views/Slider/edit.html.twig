{% extends "::admin.html.twig" %}

{% block pagetitle %}Slider List{% endblock %}
	
{% block javascriptcode %}
	<script type="text/javascript">
	$(document).ready(function(){
		
		/* setup navigation, content boxes, etc... */
		Administry.setup();
	
	});
	</script>
{% endblock %}

{% block contentsinglecolumn %}

{{ form_start(edit_form) }}

	<!-- Left column/section -->
	<section class="column width6 first">
	
	<h3>Update Slider</h3>
	
		<fieldset>
			<legend>Fill in details and press save..</legend>
			
			<p>
				{{ form_label(edit_form.title) }}<br/>
				{{ form_widget(edit_form.title) }}
				<small>e.g. Renz Hotel</small>
			</p>
			
			<p>
				{{ form_label(edit_form.shortDetail) }}<br/>
				{{ form_widget(edit_form.shortDetail) }}
				<small>e.g. slogan</small>
			</p>
			
			<p>
				{{ form_label(edit_form.file) }}
				<br />
				<a href="{{ asset('uploads/slider/'~entity.path) }}" target="_blank">
					<img src="{{ asset('uploads/slider/'~entity.path) }}" title="{{ entity.title }}" width="200px" />
				</a>
				<br/>
				{{ form_widget(edit_form.file) }}
			</p>
			
			<p class="box" style="text-align: center;">IN ARABIC</p>
			
			<p>
				{{ form_label(edit_form.titlear) }}<br/>
				{{ form_widget(edit_form.titlear) }}
				<small>e.g. Renz Hotel</small>
			</p>
			
			<p>
				{{ form_label(edit_form.shortDetailar) }}<br/>
				{{ form_widget(edit_form.shortDetailar) }}
				<small>e.g. slogan</small>
			</p>
			
		
			<p class="box"><input type="submit" class="btn btn-green big" value="Save"/> or <a href="{{ path('renz_admin_slider_index') }}">Cancel</a></p>
	
		</fieldset>
	
	</section>
	<!-- End of Left column/section -->
	
	<!-- Right column/section -->
	<aside class="column width2">
		
		<p><a href="{{ path('renz_admin_slider_index') }}" class="btn btn-special"><img SRC="{{ asset('bundles/admin/img/page_white_go.png') }}" class="icon" alt=""/>Cancel and go back</a></p>
		
		<div class="content-box">
			<header>
				<h3>Slider Visibility</h3>
			</header>
			<section>
				Choose whether or not you want this Room to be publicly visible.
				<p>{{ form_widget(edit_form.status) }}</p>
			</section>
		</div>
		 
		<div id="rightmenu">
			<dl class="first">
				<dt><img width="16" height="16" alt="" SRC="img/help.png"></dt>
				<dd><a href="#">Help</a></dd>
				<dd class="last">If you are a new user, you should read "Getting started"</dd>							
			</dl>
		</div>
		
	</aside>
	<!-- End of Right column/section -->

{{ form_end(edit_form) }}

{% endblock %}